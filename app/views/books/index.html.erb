<%= notice %>
<h2>Books</h2>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	
	<tr>
		<% @books.each do |book| %>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
	    <td><%=link_to "Show", book_path(book) %></td>
	    <td><%=link_to "Edit", edit_book_path(book) %></td>
	    <td><%=link_to "Destroy", book_path(book),method: :delete %></td>
	</tr>

    <% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book, url: '/books') do |f| %>
<a>Title</a><br>
<%= f.text_field :title %><br>
<a>Body</a><br>
<%= f.text_area :body %><br>
<%= f.submit 'Create book' %>

<% end %>

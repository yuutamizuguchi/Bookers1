<%= notice %>
<%= form_for(@book) do |f| %>

<h1>Editing Book</h1>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %><br>
<%= f.submit 'Update Book' %><br>
<%=link_to "Show", book_path(@book.id) %>
<%=link_to "Back", books_path %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

<% end %>
<% end %>